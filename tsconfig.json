{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "sourceMap": true
  }
}
