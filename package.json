{
  "name": "@voidmerge/monorepo",
  "private": true,
  "workspaces": [
    "ts/voidmerge-client",
    "ts/example1"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "esbuild": "^0.25.9",
    "jest": "^30.1.1",
    "mktemp": "^2.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "lint": "prettier . --write && prettier . --check",
    "clean": "tsc --build --clean",
    "build": "tsc --build && esbuild --bundle ts/example1/src/index.ts --minify --sourcemap --outfile=ts/example1/dist/browser.js",
    "jest": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "test": "npm run lint && npm run build && npm run jest"
  }
}
