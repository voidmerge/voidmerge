{
  "name": "@voidmerge/monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "ts/doc",
    "ts/test-integration",
    "ts/todo-leader",
    "ts/voidmerge-client",
    "ts/voidmerge-code"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "clean-css": "^5.3.3",
    "esbuild": "^0.25.10",
    "fast-xml-parser": "^5.3.0",
    "html-minifier": "^4.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build:prebundle:todo-leader": "esbuild --bundle ts/todo-leader/src/todo-client.ts --minify --outfile=ts/todo-leader/dist/bundle-todo-client.js",
    "build:prebundle": "npm run build:prebundle:todo-leader",
    "build:tsc": "tsc --build",
    "build:bundle:test-integration": "esbuild --bundle ts/test-integration/src/obj-simple.ts --sourcemap --outfile=ts/test-integration/dist/bundle-obj-simple.js && esbuild --bundle ts/test-integration/src/msg-simple.ts --sourcemap --outfile=ts/test-integration/dist/bundle-msg-simple.js",
    "build:bundle:todo-leader": "esbuild --bundle ts/todo-leader/src/todo-code.ts --sourcemap --outfile=ts/todo-leader/dist/bundle-todo-code.js",
    "build:bundle": "npm run build:bundle:test-integration && npm run build:bundle:todo-leader",
    "build:gen": "npm run build:prebundle && node scripts/file-gen.js",
    "build": "npm run build:gen && npm run build:tsc && npm run build:bundle",
    "clean": "tsc --build --clean",
    "doc": "typedoc ts/doc/src/index.ts",
    "doc-open": "npm run doc && xdg-open docs/index.html",
    "jest": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "lint": "prettier . --write && prettier . --check",
    "test": "npm run lint && npm run build && npm run jest"
  }
}
